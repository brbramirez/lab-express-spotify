<!-- Header section -->
    <h1>All Albums</h1>

{{#if albums.length}}
    <ul>
        {{#each albums}}
        <li>
            <h2>{{this.name}}</h2>
            {{#if this.images.length}}
                <img src="{{this.images.[0].url}}" alt="{{this.name}}">
            {{else}}
                <p>No image available.</p>
            {{/if}}
            <a href="/tracks/{{this.id}}">View Tracks</a>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>No albums found.</p>
{{/if}}