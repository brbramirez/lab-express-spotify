<!-- Header section -->
    <h1>All Tracks</h1>

<!-- Albums section -->
    {{#if tracks.length}}
    <ul>
        {{#each tracks}}
        <li>
        <h2>{{this.name}}</h2>
        <audio controls>
          <source src="{{this.preview_url}}" type="audio/mpeg">
          Your browser does not support the audio element.
        </audio>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>No tracks found.</p>
    {{/if}}